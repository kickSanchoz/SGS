    <!--  DialogFragment   -->

    <style name="DialogFragmentStyle">
        <item name="android:background">@color/background</item>
    </style>


    <style name="DialogFragmentStyle.Rounded">
        <item name="android:background">@drawable/bg_floating_dialog</item>
        <item name="android:backgroundTint">@color/background</item>
    </style>

    <style name="DialogFragmentTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_slide_up</item>
        <item name="android:windowExitAnimation">@anim/exit_slide_down</item>
    </style>

